<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>gerenciador</display-name>
  <welcome-file-list>
    <welcome-file>bem-vindo.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>EntradaServlet</servlet-name>
  	<servlet-class>servlet.EntradaServlet</servlet-class>
  </servlet>

    <servlet>
        <servlet-name>EntradaUsuarioServlet</servlet-name>
        <servlet-class>servlet.EntradaUsuarioServlet</servlet-class>
    </servlet>
  
  <servlet-mapping>
  	<servlet-name>EntradaServlet</servlet-name>
  	<url-pattern>/entrada</url-pattern>
  </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EntradaUsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>

    <session-config>
        <!-- 10 min -->
        <session-timeout>1</session-timeout>
    </session-config>

</web-app>